<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/f2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_gravity="fill_horizontal"
        android:textStyle="bold"
        android:textColor="@color/branco"
        android:text="Em breve, haverá novas atualizações, onde serão adicionados mais conteúdos ao aplicativo."/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_gravity="fill_horizontal"
        android:textStyle="bold"
        android:textColor="@color/branco"
        android:text=" ✔ Mais Alimentos ✔ Novas Categorias
    ✔ Atualizações constantes e muito mais!" />




    <ImageButton
        android:id="@+id/btcancel"
        android:layout_marginTop="3dp"
        android:layout_width="50dp"
        android:layout_weight="1"
        android:layout_height="30dp"
        android:background="@drawable/voltar"
        />

</LinearLayout>